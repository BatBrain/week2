<!DOCTYPE html>
<html lang="en">
<head>
    <style type="text/css">
        table, td, th {
            border: ;
            text-align: center;
            border-collapse: collapse;
            padding: 2px 10px 2px 10px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Shortened Link</th>
            <th>Original Link</th>
        </tr>
        <% Object.keys(urls).forEach((cv) => { %>
        <tr>
            <td> <%= cv %> </td>
            <td><%= urls[cv] %></td>
            <td><a href="http://localhost:8080/urls/show/<%= cv %>">edit</a></td>
            <td>
            <form method="POST" action="/urls/<%= cv %>?_method=DELETE" id="delete<%= cv %>">
            <button name="delete" type="submit" form="delete<%= cv %>" onclick="alert ('Deleted <%= cv %>!')">Delete</button>
            </form>
            </td>
        </tr>
        <% }); %>
    </table>
    <a href="http://localhost:8080/urls/new"> Click here to shorten a new link! </a>
</body>
</html>